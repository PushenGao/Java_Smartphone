<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/default_photo"/>
    <TextView
        android:id="@+id/chatview_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_toRightOf="@id/chat_photo"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"/>
    <TextView
        android:id="@+id/chatview_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_photo"
        android:layout_alignParentBottom="true"
        android:padding="7dp"
        android:text="@string/come_on"
        android:textColor="#666" />
    <TextView
        android:id="@+id/chatview_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_night"
        android:layout_alignParentRight="true"/>


</RelativeLayout><!-- From: file:/Users/JiateLi/Desktop/java-werun-501/Application/src/main/res/layout/ui_chat_history_view.xml -->