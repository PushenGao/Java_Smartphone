<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:id="@+id/profileandremove_linearlayout"
    android:layout_height="fill_parent"
    android:background="#fcfcfc"
    tools:context="ui.ProfileAndRemove"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/profileandremove_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/bar"
        android:gravity="center_vertical"  >


        <TextView
            android:id="@+id/profileandremove_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_run"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileandremove_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"

        android:onClick="startchat3"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/profileandremove_imageview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_photo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zheng"
        android:id="@+id/profileandremove_textview2"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/background_floating_material_dark"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_ca"
        android:id="@+id/profileandremove_textview3"
        android:layout_gravity="center_horizontal|left"
        android:textSize="30dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_info"
        android:id="@+id/profileandremove_textview4"
        android:layout_gravity="center_horizontal|left"
        android:textSize="30dp"
        android:paddingLeft="10dp" />



    <Button
        android:id="@+id/profileandremove_add"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/chat_text"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/profileandremove_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/remove"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="deleteFriend"
        />

</LinearLayout>


