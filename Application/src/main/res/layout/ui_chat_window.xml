<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_window_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CallCamera">

    <RelativeLayout
        android:id="@+id/chat_window_tablelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <ListView
            android:id="@+id/chat_window_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>


        <TableRow
            android:id="@+id/chat_window_tablerow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="false"
            android:paddingTop="700dp">

            <EditText
                android:id="@+id/input_text"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:minWidth="460dp" />

            <Button
                android:id="@+id/button_callcamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_photo" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND"
                android:id="@+id/send_btn" />

        </TableRow>
    </RelativeLayout>
</RelativeLayout>

