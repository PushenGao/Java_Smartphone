<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fcfcfc"
    tools:context="ui.ProfileAndRemove"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/profileandremove_head"
        android:background="@drawable/bar"
        android:gravity="center_vertical"  >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WeRun"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"

        android:onClick="startchat3"
        android:layout_gravity="top">
        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/zheng"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zheng"
        android:id="@+id/profileandremove_text1"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/background_floating_material_dark"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:CA"
        android:id="@+id/profileandremove_text2"
        android:layout_gravity="center_horizontal|left"
        android:textSize="30dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info: AAA"
        android:id="@+id/profileandremove_text3"
        android:layout_gravity="center_horizontal|left"
        android:textSize="30dp"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/profileandremove_add"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:background="#ff3339ff" />

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/profileandremove_delete"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:background="#ff561713"
        android:paddingTop="30dp" />

</LinearLayout>

